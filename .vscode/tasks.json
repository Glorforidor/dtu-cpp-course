{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                // "${file}",
                "${fileDirname}/**.cpp",
                "-Wall",
                // "-Wextra",
                // "-Werror",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                //"cwd": "${workspaceFolder}"
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "version": "2.0.0"
}